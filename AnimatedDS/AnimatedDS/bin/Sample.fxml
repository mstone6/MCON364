<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application2.StackController">
    <Label text="Welcome To The Stack" style="-fx-font-size: 24pt; -fx-font-weight: bold; -fx-text-fill: black;" />
    <HBox alignment="CENTER" spacing="10">
        <Button text="Push" onAction="#handlePush" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
        <Button text="Pop" onAction="#handlePop" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold;" />
    </HBox>
    <StackPane fx:id="pane" VBox.vgrow="ALWAYS">
        <!-- Visual representation of the stack -->
        <Rectangle width="100" height="400" fill="LIGHTGRAY" stroke="BLACK" strokeWidth="2"/>
    </StackPane>
</VBox>
